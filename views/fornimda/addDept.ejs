<%- include ('../layouts/admin_header',{title:'Admin Add Department',user:false}) -%>

<!-- navbar -->
<%- include ('../partials/dash_nav.ejs') -%>

<div class="container-fluid">
  <div class="row">
    <!-- sidebar -->
    <%- include ('../partials/dash_sidebar.ejs') -%>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
      <!-- section title -->
      <%- include ('../partials/dash_sec_title.ejs',{title:'Add Department Details'})-%>

      <div class="p-1 bookForm">
        <!-- error message -->
        <%- include ('../partials/message') -%>
        <form action="/3U0bzsE9e1mQBuIW/addDept" method="post" accept-charset="utf-8">
          <div class="form-group">
            <label for="name">Department Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Information & Communication Technology"
            />
          </div>
          <div class="form-group">
            <label for="shortName">Department Name (short)</label>
            <input
              type="text"
              class="form-control"
              id="shortName"
              name="shortName"
              placeholder="ICT"
            />
          </div>

          <!-- submit btn -->
          <button class="d-block my-2 w-25 btn btn-primary" type="submit">Submit</button>
        </form>
      </div>

      <!-- table -->
      <h2>Recently Added</h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Shortname</th>
              <th>Total Books</th>
            </tr>
          </thead>
          <tbody>
           <% if (typeof departments !=="undefined") { %>
            <% for( department of departments) { %>
              <tr>
                <td><%= department.id %></td>
                <td><%= department.name %></td>
                <td><%= department.shortName %></td>
                <td><%= department.totalBooks %></td>
              </tr>
              <% } %>
           <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>


<!-- footer -->
<%- include ('../layouts/admin_footer') -%>
