<section id="paginition">
  <div class="container">
    <div class="row">
      <div class="col12 center-align">
        <ul class="pagination">
          <li class=<%= page-1 >= 1 ? "waves-effect" : 'disabled'%> >
            <a <% if (page-1 >= 1) { %> href="?page=<%= page - 1 %>"<% } %> 
              ><i class="material-icons">chevron_left</i></a>
          </li>
          <% for( let i = 1; i <=pages ; i++ ) { %>
            <li class="waves-effect"><a href="?page=<%= i %>"> <%= i %>  </a></li>
          <% } %>
          <li class=<%= page+1 <= pages ? "waves-effect" : 'disabled'%> >
            <a <% if (page+1 <= pages) { %> href="?page=<%= page + 1 %>"<% } %> 
              ><i class="material-icons">chevron_right</i></a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
